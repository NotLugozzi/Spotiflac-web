# Spotiflac web Configuration

# Application Settings
APP_NAME=Spotiflac web
APP_ENV=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# Server Settings
HOST=0.0.0.0
PORT=8080

# Database
DATABASE_URL=sqlite:///./data/spotiflac.db

# Spotify API Credentials (OPTIONAL)
# Only needed for automatic artist/album matching from your library
# Without these, you can still use manual URL input for downloads
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Music Library Paths (comma-separated for multiple)
MUSIC_LIBRARY_PATH=/music
DOWNLOAD_PATH=/downloads

# SpotiFLAC Settings
SPOTIFLAC_SERVICE=tidal,qobuz,deezer
SPOTIFLAC_FILENAME_FORMAT={artist}/{album}/{track_number} - {title}
SPOTIFLAC_USE_ARTIST_SUBFOLDERS=true
SPOTIFLAC_USE_ALBUM_SUBFOLDERS=true
SPOTIFLAC_RETRY_MINUTES=30

# Authentication (optional - leave empty to disable)
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme

# Scanning Settings
SCAN_INTERVAL_MINUTES=60
AUTO_SCAN_ON_STARTUP=true

# Logging
LOG_LEVEL=INFO
